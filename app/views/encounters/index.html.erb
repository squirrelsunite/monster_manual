<h1>Listing encounters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Active</th>
    <th>Original encounter</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @encounters.each do |encounter| %>
  <tr>
    <td><%= encounter.name %></td>
    <td><%= encounter.active %></td>
    <td><%= encounter.original_encounter_id %></td>
    <td><%= link_to 'Show', encounter %></td>
    <td><%= link_to 'Edit', edit_encounter_path(encounter) %></td>
    <td><%= link_to 'Destroy', encounter, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

